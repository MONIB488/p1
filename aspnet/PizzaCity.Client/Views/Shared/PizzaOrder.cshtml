@model PizzaCity.Client.Models.OrderViewModel

@{
  ViewBag.Title = "Order Pizza";
  Layout = "_Layout";
}
<p>Welcome @Model.CustomerName !</p>
<section>
<h2>Order Pizza</h2>
<form action="/order/AddPizza" method="POST">
<p>Select pizza: </p>
@foreach (var item in Model.Pizzas)
{
    <input type="radio" name="pizza" id="@item.EntityId" value=@item.EntityId required>
    <label for="@item.Name">@item.Name</label>
}
<button type="submit">Add Pizza</button>:
</form>

</section>